<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frontFrameView"
    tools:context=".UnlocketSticer">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/imageMoving"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:layout_gravity="bottom"
        >
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/addStickerInCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add sticker"
        android:src="@drawable/iconshoot"
        android:layout_marginTop="575sp"
        android:layout_gravity="center_horizontal"/>

</FrameLayout>