<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".CustomArActivity">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fragment"
        android:name="com.example.samplestickerapp.CustomArFragment">

        <ImageView
            android:id="@+id/logoFudFragment"
            android:layout_width="80sp"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:src="@drawable/fudlogo"
            />

        <ImageView
            android:id="@+id/logoBobFragment"
            android:layout_width="90sp"
            android:layout_height="60sp"
            android:src="@drawable/spongeboblogo"
            android:layout_gravity="end"
            android:layout_margin="20sp"
            />
    </fragment>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82sp"
        android:layout_gravity="bottom"
        >


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/infoBtn"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_margin="25sp"
                android:layout_weight="1"
                android:src="@drawable/iconinfo"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/PhotoBtnGallery"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_margin="25sp"
                android:layout_marginHorizontal="40sp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/iconphoto">
            </ImageView>


            <ImageView
                android:id="@+id/ProfileBtn"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_margin="25sp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginHorizontal="40sp"
                android:src="@drawable/iconprofile"/>



        </LinearLayout>



    </RelativeLayout>



    <ImageView
        android:clickable="true"
        android:id="@+id/btnShanpshot"
        android:layout_width="100sp"
        android:layout_height="70sp"
        android:src="@drawable/iconshoot"
        android:layout_marginTop="575sp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:clickable="true"
        android:id="@+id/btnShanpshotFront"
        android:layout_width="100sp"
        android:layout_height="70sp"
        android:src="@drawable/iconshoot"
        android:layout_marginTop="575sp"
        />

    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        />






</FrameLayout>